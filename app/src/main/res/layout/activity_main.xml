<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context="com.example.android.chessclock.MainActivity">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5">

    <Button
      android:id="@+id/topButton"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#222"
      android:alpha="1"/>

    <TextView
      android:id="@+id/topTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:rotation="-90"
      android:clickable="false"
      android:text="01:00"
      android:textSize="60sp"
      android:textColor="#fff"
      android:elevation="10dp"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:elevation="10dp">
      <ImageButton
        android:id="@+id/editTimeTop1Up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="90"/>

      <ImageButton
        android:id="@+id/editTimeTop2Up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="90"/>
    </LinearLayout>

    <ImageButton
      android:id="@+id/topEditTimeModeUp"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:elevation="10dp"
      android:background="@drawable/downarrow"/>

    <ImageView
      android:id="@+id/topFirstFlag"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_margin="32dp"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:elevation="10dp"
      android:background="#ff0000"/>

    <ImageButton
      android:id="@+id/topEditTimeModeDown"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:elevation="10dp"
      android:background="@drawable/downarrow"
      android:rotation="180"
      android:layout_alignParentTop="true"
      android:layout_alignLeft="@+id/topEditTimeModeUp"
      android:layout_alignStart="@+id/topEditTimeModeUp"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:elevation="10dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true">

      <ImageButton
        android:id="@+id/editTimeTop1Down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="-90"/>

      <ImageButton
        android:id="@+id/editTimeTop2Down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="-90"/>
    </LinearLayout>

  </RelativeLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageButton
      android:id="@+id/controlButton1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="8dp"
      android:background="#000"
      android:src="@drawable/reset"
      android:scaleType="fitCenter"/>

    <ImageButton
      android:id="@+id/controlButton2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="8dp"
      android:background="#000"
      android:src="@drawable/pause"
      android:scaleType="fitCenter"/>

    <ImageButton
      android:id="@+id/soundButton"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="8dp"
      android:background="#000"
      android:src="@drawable/sound_on"
      android:scaleType="fitCenter"/>

    <ImageButton
      android:id="@+id/settingsButton"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="8dp"
      android:background="#000"
      android:src="@drawable/settings_gear"
      android:scaleType="fitCenter"/>

  </LinearLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:elevation="10dp">
      <ImageButton
        android:id="@+id/editTimeBottom1Up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="90"/>
      <ImageButton
        android:id="@+id/editTimeBottom2Up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="90"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:elevation="10dp">
      <ImageButton
        android:id="@+id/editTimeBottom1Down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="-90"/>
      <ImageButton
        android:id="@+id/editTimeBottom2Down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/downarrow"
        android:rotation="-90"/>
    </LinearLayout>

    <TextView
      android:id="@+id/bottomTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:rotation="-90"
      android:clickable="false"
      android:text="01:00"
      android:textSize="60sp"
      android:textColor="#fff"
      android:elevation="10dp"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"/>

    <ImageView
      android:id="@+id/bottomFirstFlag"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_margin="32dp"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:elevation="10dp"
      android:background="#ff0000"/>

    <ImageButton
      android:id="@+id/bottomEditTimeModeDown"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerHorizontal="true"
      android:elevation="10dp"
      android:background="@drawable/downarrow"
      android:rotation="180"/>

    <ImageButton
      android:id="@+id/bottomEditTimeModeUp"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:elevation="10dp"
      android:background="@drawable/downarrow"
      android:rotation="0"/>

    <Button
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="1"
        android:background="#222" />

  </RelativeLayout>

</LinearLayout>
